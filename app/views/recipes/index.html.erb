<div class="cards">
  <% @recipes.each do |recipe| %>
    <div class="card-trip">
        <h2><%=recipe.name%></h2>
        <h6>Price: <%= humanized_money_with_symbol(recipe.price) %></h6>
        <p><%=recipe.description%></p>
    </div>
    <%= link_to "voir la recette", recipe_path(recipe) %>
    <% end %>
</div>
