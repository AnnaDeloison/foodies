  <%= simple_form_for @order, method: :post, class: "action" do |f| %>
  <%= f.input :recipe_id, :as => :hidden, :input_html => { :value => params[:recipe_id] } %>
  <%= f.input :street_number, input_html: {class: "form-control", id: "exampleInputEmail1"}, label: false, placeholder: "Numéro de la voie" %>
  <%= f.input :street_name, input_html: {class: "form-control", id: "exampleInputPassword1"}, label: false, placeholder: "Nom de la voie" %>
  <%= f.input :city, input_html: {class: "form-control", id: "exampleInputEmail1"}, label: false, placeholder: "Ville" %>
  <%= f.input :zip_code, input_html: {class: "form-control", id: "exampleInputEmail1"}, label: false, placeholder: "Code postal" %>
  <%= f.input :order_date, input_html: {class: "form-control", id: "exampleInputEmail1"}, label: false, placeholder: "Date" %>
  <%= f.input :order_hour, input_html: {class: "form-control", id: "exampleInputEmail1"}, label: false, placeholder: "Heure de la livraison" %>
  <%= f.submit "Commander", id: "lebouton" %>
  <% end %>
