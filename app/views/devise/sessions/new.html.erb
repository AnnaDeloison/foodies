<div class="global-index-signin">


<div class="div-sign-in">

</div>
  <div class ="sign-in-form">
    <h2 id="logintext">Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se souvenir de moi", class: "remember-me", as: :boolean if devise_mapping.rememberable? %>
      </div>


      <div class="form-actions div-se-connecter" >
        <%= f.button :submit, "SE CONNECTER", id: "bouton-se-connecter" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
